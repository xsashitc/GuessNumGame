<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xsa.guessnumbergame.MainActivity"
    android:background="#ff0000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/come_to_guess"
        android:textColor="#ffff00"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginTop="50dp"
        android:id="@+id/tv_guess"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/tv_guess"
        android:layout_marginTop="100dp"
        android:text="@string/start_game"
        android:textSize="20sp"
        android:id="@+id/btn_start_game"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_start_game"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/game_rule"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:id="@+id/tv_game_rule"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
